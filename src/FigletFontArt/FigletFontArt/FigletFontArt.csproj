<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <VersionPrefix>1.0.0</VersionPrefix>
    <SignAssembly>True</SignAssembly>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>FigletFontArt a ASCII text art generation</Title>
    <Description>The FigletFontArt is a ASCII text art generation for .NET console application</Description>
    <PackageProjectUrl>https://github.com/VikashChauhan51/figlet-ascii-art</PackageProjectUrl>
    <Authors>VikashChauhan51</Authors>
    <Copyright>Copyright Â© VikashChauhan51, 2023</Copyright>
    <RepositoryUrl>https://github.com/VikashChauhan51/figlet-ascii-art</RepositoryUrl>
    <PackageTags>command-line;command-line-art;ascii-art;ascii-font-art;console;console-art;console-output;console-ascii-art-generator;ascii-art-generator</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyOriginatorKeyFile>..\FigletFontArt.snk</AssemblyOriginatorKeyFile>
    <RepositoryType>git</RepositoryType>
    <ProjectGuid>{75519BBE-A7AE-4D69-B255-CB95AE266775}</ProjectGuid>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts.zip" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Fonts.zip" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
